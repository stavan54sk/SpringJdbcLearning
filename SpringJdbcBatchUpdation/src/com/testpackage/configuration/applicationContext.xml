<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
         <bean id="employeedaoimpl" class="com.testpackage.dao.EmployeeDaoImpl">
       		<property name="dataSource" ref="datasourceid"></property>
         </bean>
        <bean id="datasourceid" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
       	<property name = "driverClassName" value = "com.mysql.cj.jdbc.Driver"/>
      	<property name = "url" value = "jdbc:mysql://localhost:3306/classicmodels"/>
      	<property name = "username" value = "root"/>
      	<property name = "password" value = "root1234"/>
        </bean>
</beans>
      